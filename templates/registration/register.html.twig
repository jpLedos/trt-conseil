{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Créez votre Compte</h1>

    <div class="container ms-5 w-50">
  
        {{ form_start(registrationForm) }}

            <div class="form-group text-left">
                {{ form_label(registrationForm.email,'email' ,{'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div> 
        
            <div class="form-group text-left">
                {{ form_label(registrationForm.plainPassword,'Votre mot de passe' ,{'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div> 

            <div class="form-group text-left mt-3">
                {{ form_label(registrationForm.category,'Le type de profil souhaité :' ,{'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_widget(registrationForm.category, {'attr': {'class': 'mt-1'}}) }}
                {{ form_errors(registrationForm.category) }}
            </div> 

            <div class="form-check text-left mt-3">
                {{ form_label(registrationForm.agreeTerms,'j\'accepte les condistion d\'utilisation ' ,{'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div> 


            <button type="submit" class="btn btn-primary my-3">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
