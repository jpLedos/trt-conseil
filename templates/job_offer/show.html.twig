{% extends 'base.html.twig' %}

{% block title %}JobOffer{% endblock %}

{% block body %}
    <h1>Detail de l'offre</h1>

    <div class="container w-75">

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ job_offer.id }}</td>
                </tr>
                <tr>
                    <th>JobTitle</th>
                    <td>{{ job_offer.jobTitle }}</td>
                </tr>
                <tr>
                    <th>Société</th>
                    <td>{{ job_offer.recruiter.company }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ job_offer.city }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ job_offer.description }}</td>
                </tr>
                <tr>
                    <th>IsValidated</th>
                    <td>{{ job_offer.isValidated ? 'OUI' : 'NON' }}</td>
                </tr>
            </tbody>
        </table>

        <div><a class="btn mb-4 {{ job_offer.isvalidated ? "btn-danger" : "btn-primary" }}  "href="{{ path('job_offer_toogle', {'id': job_offer.id}) }}">{{ job_offer.isvalidated ? "Desapprouver" : "Approuver" }}<a><div>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('job_offer/_delete_form.html.twig') }}
        {% endif %}    
        <a href="{{ path('job_offer_index') }}">Retour à la liste</a><br />
    </div>
{% endblock %}
