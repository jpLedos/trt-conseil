{% extends 'base.html.twig' %}

{% block title %}Recruiter{% endblock %}

{% block body %}
    <div class="container w-75">
        <h1>Recruiter</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ recruiter.id }}</td>
                </tr>
                <tr>
                    <th>Company</th>
                    <td>{{ recruiter.company }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ recruiter.city }}</td>
                </tr>
            </tbody>
        </table>

        {% if not  recruiter.user.isActived %}
            <a href="{{ path('recruiter_edit', {'id': recruiter.id}) }}">Modifier</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            {{ include('recruiter/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
