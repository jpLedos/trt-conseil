{{ form_start(form) }}
    
    <div class="container ms-5 w-50 ">     
        
        <div class="form-group text-left mt-3">
            {{ form_label(form.lastname,'Nom' ,{'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lastname) }}
        </div> 

        <div class="form-group text-left mt-3">
            {{ form_label(form.firstname,'Prenom' ,{'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstname) }}
        </div> 

        <div class="form-group text-left mt-3 ">
            
            {{ form_label(form.cv,'joindre votre CV au format PDF' ,{'label_attr': {'class': 'form-label'}}) }}<br>
            {%if candidate.cv %}Fichier actuel : 
                <a target="_blank" href="{{ asset('uploads/cv/' ~ candidate.cv) }}">{{candidate.cv}}</a>
            {% endif %}
            {{ form_widget(form.cv, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.cv) }}
        </div> 

        <button class="btn btn-primary mt-4">{{ button_label|default('Enregistrer') }}</button>
    </div> 

    
{{ form_end(form) }}
